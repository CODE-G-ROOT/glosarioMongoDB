        Fecha_Fin: {
          bsonType: "date",
          description: "fecha de entrega del alquiler"
        },
        Teléfono: {
          bsonType: "string",
          description: "telefono xd"
        },
        Estado: {
          bsonType: "string",
          description: "estado actual del alquiler",
        },
      },
    },
  },
  validationAction: "error"
});
